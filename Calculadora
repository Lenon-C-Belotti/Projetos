#include <stdio.h>
#include <locale.h>
char di[10];
//Adição
float soma(float num1, float num2){
	float soma1;
	soma1 = num1 + num2;
		printf("O valor da soma resulta em %f", soma1);
	
}

//subtração
float sub(float nume1, float nume2){
	float subt;
	subt = nume1 - nume2;
	printf("O valor da subtracao resulta em %f", subt);

}

//divisão
float div(float numer1, float numer2){
	float divi;
	int escolha;
	
	
do {
    printf("Digite em qual ordem deseja fazer a divisao:\n");
    printf("1 - Usar o primeiro numero antes.\n");
    printf("2 - Usar o segundo numero antes.\n");
    printf("Escolha: ");
    scanf("%d", &escolha);
    if (escolha != 1 && escolha != 2)
        printf("Opcao invalida. Tente novamente.\n");
} while (escolha != 1 && escolha != 2);

	switch(escolha){
		case 1:
			divi = numer1/numer2;
			printf("A divisao resulta em %f ", divi);
			break;
		case 2:
			divi = numer2/numer1;
			printf("A divisao resulta em %f ", divi);
			break;	
			
	}
	
}

//multiplicação
float mult(float numero1, float numero2){
	float multi;
	multi = numero1 * numero2;
	printf("O valor da multiplicacao eh de %f ", multi);
	
}


int main(){
	int escolhas;
	float nu1, nu2;
	printf("\n --------------------<=Calculadora=>------------------------");
	printf("\n| Digite um numero para ser calculado: ");
	scanf("%f", &nu1);
	printf("\n| Digite um outro numero para ser calculado: ");
	scanf("%f", &nu2);
	do{
	
	printf("\n| Digite oque deseja fazer de acordo com o numero           |");
	printf("\n| 1 - SOMA                                                  |");
	printf("\n| 2 - SUBTRACAO                                             |");
	printf("\n| 3 - DIVISAO                                               |");
	printf("\n| 4 - MULTIPLICACAO                                         |");
	printf("\n| Digite sua escolha:                                       |\n");
	scanf("%d", &escolhas);
	if (escolhas != 1 && escolhas != 2 && escolhas != 3 && escolhas != 4)
        printf("Opcao invalida. Tente novamente.\n");
    
	}while(escolhas != 1 && escolhas != 2 && escolhas != 3 && escolhas != 4);
	printf("------------------------------------------------------------\n");
	
	switch(escolhas){
		case 1:
			soma(nu1, nu2);
			
			break;
		case 2:
			sub(nu1, nu2);
			
			break;
		case 3:
			div(nu1, nu2);
			
			break;
		case 4:
			mult(nu1, nu2);	
			
			break;		
	}

	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
	
}
